# Azure OpenAI (via AI Foundry)
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com/
AZURE_OPENAI_API_KEY=<your-api-key>
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Cosmos DB (free tier, NoSQL API)
COSMOS_ENDPOINT=https://<your-account>.documents.azure.com:443/
COSMOS_KEY=<your-primary-key>
COSMOS_DATABASE=secureflow

# GitHub
GITHUB_TOKEN=ghp_<your-personal-access-token>
GITHUB_WEBHOOK_SECRET=<your-webhook-secret>

# Application Insights (optional)
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=<key>;IngestionEndpoint=https://eastus2-3.in.applicationinsights.azure.com/

# App settings
LOG_LEVEL=INFO
MAX_CONCURRENT_ANALYSES=5
AGENT_TIMEOUT_SECONDS=45
GITHUB_API_TIMEOUT=15.0
SCANNER_TIMEOUT=30
